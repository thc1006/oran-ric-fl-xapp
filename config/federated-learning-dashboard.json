{
  "dashboard": {
    "title": "Federated Learning xApp Monitoring",
    "tags": ["oran", "ric", "xapp", "federated-learning", "ml"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "FL xApp 狀態",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{app=\"federated-learning\"}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "訓練輪次",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "fl_rounds_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 100, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "模型準確度",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "fl_model_accuracy * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "活躍客戶端數",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "fl_active_clients",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "訓練進度（累計）",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "fl_rounds_total",
            "legendFormat": "訓練輪次",
            "refId": "A"
          },
          {
            "expr": "fl_models_trained_total",
            "legendFormat": "已訓練模型數",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "次數"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 6,
        "title": "模型準確度趨勢",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "fl_model_accuracy * 100",
            "legendFormat": "準確度 (%)",
            "refId": "A"
          },
          {
            "expr": "fl_model_loss",
            "legendFormat": "損失值",
            "refId": "B",
            "yAxisIndex": 1
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "準確度 (%)", "min": 0, "max": 100},
          {"format": "short", "label": "損失值"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": true,
          "values": true
        }
      },
      {
        "id": 7,
        "title": "客戶端參與情況",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "fl_active_clients",
            "legendFormat": "活躍客戶端",
            "refId": "A"
          },
          {
            "expr": "fl_clients_total",
            "legendFormat": "總客戶端數",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "客戶端數"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "模型更新統計",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(fl_model_updates_sent_total[5m])",
            "legendFormat": "已發送",
            "refId": "A"
          },
          {
            "expr": "rate(fl_model_updates_received_total[5m])",
            "legendFormat": "已接收",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "每秒更新數"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "訓練延遲",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(fl_training_latency_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fl_training_latency_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(fl_training_latency_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "延遲 (秒)"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "資源使用 - CPU & 記憶體",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{app=\"federated-learning\"}[5m]) * 100",
            "legendFormat": "CPU (%)",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{app=\"federated-learning\"} / 1024 / 1024",
            "legendFormat": "記憶體 (MB)",
            "refId": "B",
            "yAxisIndex": 1
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU (%)"},
          {"format": "decmbytes", "label": "記憶體 (MB)"}
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  },
  "overwrite": true
}
